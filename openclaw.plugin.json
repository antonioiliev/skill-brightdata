{
  "id": "brightdata",
  "name": "BrightData",
  "description": "Social media scanning via BrightData API",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "apiKey": {
        "type": "string",
        "description": "BrightData API key"
      },
      "timeoutMs": {
        "type": "number",
        "description": "Request timeout in milliseconds (default 55000)"
      },
      "datasetOverrides": {
        "type": "object",
        "description": "Override default dataset IDs per platform/type",
        "additionalProperties": { "type": "string" }
      }
    },
    "required": ["apiKey"]
  },
  "uiHints": {
    "apiKey": {
      "label": "API Key",
      "sensitive": true,
      "placeholder": "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx",
      "help": "BrightData API key (or use ${BRIGHTDATA_API_KEY})"
    },
    "timeoutMs": {
      "label": "Timeout (ms)",
      "advanced": true,
      "placeholder": "55000"
    },
    "datasetOverrides": {
      "label": "Dataset Overrides",
      "advanced": true,
      "help": "Override default BrightData dataset IDs per platform"
    }
  }
}
